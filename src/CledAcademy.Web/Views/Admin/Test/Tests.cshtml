@model IEnumerable<CledAcademy.Core.Domain.Test>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Tests";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="pull-left">Tests</h2>
                </div> 
                <div class="col-md-4">
                    <a asp-controller="Admin" asp-action="TestCreate" asp-route-courseId="@Context.Request.Query["courseId"]" class="btn btn-primary waves-effect pull-right">Add</a>
                </div>
            </div>
        </div>
        <!-- Hover Rows -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>CONTENT</th>
                                    <th>TEST TYPE</th>
                                    <th colspan="2">Actions</th>
                                    <th>ANSWERS</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var test in Model)
                            {
                                <tr>
                                    <th scope="row">@test.Id</th>
                                    <td>@test.Content</td>
                                    <td>@test.TestType</td>
                                    <td><a asp-controller="Admin" asp-action="TestEdit" asp-route-id="@test.Id" class="btn btn-primary waves-effect">Edit</a></td>
                                    <td>
                                        <form asp-controller="Admin" asp-action="TestDelete" method="post">
                                            <input type="hidden" name="id" value="@test.Id"/>
                                            <button onclick="return confirm('Are you sure you want to delete this item ?')" type="submit" class="btn btn-danger waves-effect">Delete</button>
                                        </form>
                                    </td>
                                    <td><a asp-controller="Admin" asp-action="Answers" asp-route-testId="@test.Id" class="btn btn-block waves-effect">View Answers</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Hover Rows -->
    </div>
</section>
