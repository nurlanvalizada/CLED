@model IEnumerable<CledAcademy.Core.Domain.Lesson>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Lessons";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="pull-left">Lessons</h2>
                </div> 
                <div class="col-md-4">
                    <a asp-controller="Admin" asp-action="LessonCreate" asp-route-sectionId="@Context.Request.Query["sectionId"]" class="btn btn-primary waves-effect pull-right">Add</a>
                </div>
            </div>
        </div>
        <!-- Hover Rows -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>NAME</th>
                                    <th>VIDEOURL</th>
                                    <th>PRICE</th>
                                    <th colspan="2">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var lesson in Model)
                            {
                                <tr>
                                    <th scope="row">@lesson.Id</th>
                                    <td>@lesson.Name</td>
                                    <td>@lesson.VideoUrl</td>
                                    <td>@lesson.Price</td>
                                    <td><a asp-controller="Admin" asp-action="LessonEdit" asp-route-id="@lesson.Id" class="btn btn-primary waves-effect">Edit</a></td>
                                    <td>
                                        <form asp-controller="Admin" asp-action="LessonDelete" method="post">
                                            <input type="hidden" name="id" value="@lesson.Id"/>
                                            <button onclick="return confirm('Are you sure you want to delete this item ?')" type="submit" class="btn btn-danger waves-effect">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Hover Rows -->
    </div>
</section>
