@model CledAcademy.Core.Domain.Answer
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Answer";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Edit Answer</h2>
        </div>

        <!-- Vertical Layout -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <form asp-controller="Admin" asp-action="AnswerEdit" method="post">
                            <input type="hidden" asp-for="TestId"/>
                            <label asp-for="Text"></label>
                            <div class="form-group">
                                <div class="form-line">
                                    <textarea asp-for="Text" class="form-control" placeholder="Enter text"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="checkbox" id="isCorrect" name="isCorrect" class="filled-in"/>
                                    <label for="isCorrect">Is Correct ?</label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary m-t-15 waves-effect">SAVE</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Vertical Layout -->
    </div>
</section>
