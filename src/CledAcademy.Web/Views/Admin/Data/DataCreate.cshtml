@model CledAcademy.Core.Domain.DataDictionary
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Data";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Add Data</h2>
        </div>

        <!-- Vertical Layout -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <form asp-controller="Admin" asp-action="DataCreate" method="post">
                            <label asp-for="Key"></label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input asp-for="Key" class="form-control" placeholder="Enter Key" />
                                </div>
                            </div>
                            <label asp-for="Header"></label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input asp-for="Header" class="form-control" placeholder="Enter header"/>
                                </div>
                            </div>
                            <label asp-for="Value"></label>
                            <div class="form-group">
                                <div class="form-line">
                                    <textarea asp-for="Value" class="form-control" placeholder="Enter value"></textarea>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary m-t-15 waves-effect">SAVE</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Vertical Layout -->
    </div>
</section>