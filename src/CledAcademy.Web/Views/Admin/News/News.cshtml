@model IEnumerable<CledAcademy.Core.Domain.News>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "News";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="pull-left">News</h2>
                </div> 
                <div class="col-md-4">
                    <a asp-controller="Admin" asp-action="NewsCreate" class="btn btn-primary waves-effect pull-right">Add</a>
                </div>
            </div>
        </div>
        <!-- Hover Rows -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>TITLE</th>
                                    <th>SHORT CONTENT</th>
                                    <th>IMAGEURL</th>
                                    <th colspan="2">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var news in Model)
                            {
                                <tr>
                                    <th scope="row">@news.Id</th>
                                    <td>@news.Title</td>
                                    <td>@news.ShortContent</td>
                                    <td>@news.ImageUrl</td>
                                    <td><a asp-controller="Admin" asp-action="NewsEdit" asp-route-id="@news.Id" class="btn btn-primary waves-effect">Edit</a></td>
                                    <td>
                                        <form asp-controller="Admin" asp-action="NewsDelete" method="post">
                                            <input type="hidden" name="id" value="@news.Id"/>
                                            <button onclick="return confirm('Are you sure you want to delete this item ?')" type="submit" class="btn btn-danger waves-effect">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Hover Rows -->
    </div>
</section>
