@model IEnumerable<CledAcademy.Core.Domain.Course>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Courses";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="pull-left">Courses</h2>
                </div> 
                <div class="col-md-4">
                    <a asp-controller="Admin" asp-action="CourseCreate" class="btn btn-primary waves-effect pull-right">Add</a>
                </div>
            </div>
        </div>
        <!-- Hover Rows -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>NAME</th>
                                    <th>DESCRIPTION</th>
                                    <th>IMAGEURL</th>
                                    <th>VIDEOURL</th>
                                    <th colspan="2">Actions</th>
                                    <th>Related Sections</th>
                                    <th>Related Tests</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <th scope="row">@course.Id</th>
                                    <td>@course.Name</td>
                                    <td>@course.Description</td>
                                    <td>@course.ImageUrl</td>
                                    <td>@course.VideoUrl</td>
                                    <td><a asp-controller="Admin" asp-action="CourseEdit" asp-route-id="@course.Id" class="btn btn-primary waves-effect">Edit</a></td>
                                    <td>
                                        <form asp-controller="Admin" asp-action="CourseDelete" method="post">
                                            <input type="hidden" name="id" value="@course.Id"/>
                                            <button onclick="return confirm('Are you sure you want to delete this item ?')" type="submit" class="btn btn-danger waves-effect">Delete</button>
                                        </form>
                                    </td>
                                    <td><a asp-controller="Admin" asp-action="Sections" asp-route-courseId="@course.Id" class="btn btn-block waves-effect">View Sections</a></td>
                                    <td><a asp-controller="Admin" asp-action="Tests" asp-route-courseId="@course.Id" class="btn btn-block waves-effect">View Tests</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Hover Rows -->
    </div>
</section>
