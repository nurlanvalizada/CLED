@model IEnumerable<CledAcademy.Core.Domain.Teacher>
@{
    ViewData["Title"] = "Müəllimlər";
}
  <!-- Start main-content -->
<div class="main-content">

    <!-- Section: inner-header -->
    <section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/images/bg3.jpg">
        <div class="container pt-70 pb-20">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="title text-white">Müəllimlər</h2>
                        <ol class="breadcrumb text-left text-black mt-10">
                            <li><a href="http://www.cledacademy.com">CledAcademy.Com</a></li>
                            <li><a asp-controller="Home" asp-action="Index">Ana Səhifə</a></li>
                            <li class="active text-gray-silver">Müəllimlər</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section: Team -->
    <section id="team">
        <div class="container">
            <div class="row mtli-row-clearfix">
                @foreach (var teacher in Model)
                {
                    <div class="col-xs-12 col-sm-6 col-md-3 sm-text-center mb-30 mb-sm-30">
                        <div class="team-members maxwidth400">
                            <div class="team-thumb">
                                @if (string.IsNullOrEmpty(teacher.ImageUrl))
                                {
                                    <img class="img-fullwidth" alt="" src="http://placehold.it/260x230">
                                }
                                else
                                {
                                    <img class="img-fullwidth" alt="" src="@teacher.ImageUrl"/>
                                }
                            </div>
                            <div class="team-bottom-part border-bottom-theme-color-2-2px bg-lighter border-1px text-center p-10 pt-20 pb-10">
                                <h4 class="font-raleway font-weight-600 m-0"><a class="text-theme-color-2" asp-controller="Home" asp-action="TeacherDetails" asp-route-id="@teacher.Id">@teacher.FullName</a></h4>
                                <h5 class="text-theme-color">@teacher.Profession</h5>
                                <ul class="styled-icons icon-sm icon-dark icon-theme-colored">
                                    <li><a href="@teacher.FacebookProfile"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="@teacher.TwitterProfile"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="@teacher.SkypeProfile"><i class="fa fa-skype"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
<!-- end main-content -->