@model CledAcademy.Web.Models.ViewModels.AccountViewModels.SuggestViewModel
@{
    ViewData["Title"] = "Dostuna Təklif Et";
}

<!-- Start main-content -->
<div class="main-content">

    <!-- Section: inner-header -->
    <section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/images/bg3.jpg">
        <div class="container pt-70 pb-20">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="title text-white">Saytımızı Dostuna Təklif Et</h2>
                        <ol class="breadcrumb text-left text-black mt-10">
                            <li><a href="http://www.cledacademy.com">CledAcademy.Com</a></li>
                            <li><a asp-controller="Account" asp-action="Index">Mənim Hesabım</a></li>
                            <li class="active text-gray-silver">Dostuna Təklif Et</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-push-3">
                    <div class="icon-box mb-0 p-0">
                        <a href="#" class="icon icon-bordered icon-rounded icon-sm pull-left mb-0 mr-10">
                            <i class="fa fa-bank"></i>
                        </a>
                        <h4 class="text-gray pt-10 mt-0 mb-30">Saytımızı Dostuna Təklif Et</h4>
                    </div>
                    <hr>
                    @if (ViewBag.SuggestResult == "alreadyRegistered")
                    {
                        <p>Sizin daxil etdiyiniz email ünvanı ilə artıq saytımızda qeydiyyatdan keçilib. Zəhmət olmasa başqa email ünvanı ilə yenidən cəhd edin.</p>
                    }
                    else if (ViewBag.SuggestResult == "invalidEmail")
                    {
                        <p>Daxil etdiyiniz email ünvanı yanlışdır. Zəhmət olmasa daxil etdiyiniz email ünvanının doğruluğunu yoxlayın və yenidən cəhd edin.</p>
                    }
                    else
                    {
                        <p>
                            Təşəkkür edirik. Sizin dostunuza qeydiyyatdan keçməsi üçün email göndərildi. Dostunuz saytımızda qeydiyyatdan keçəcəyi təqdirdə balansiniza
                            <span class="text-theme-color-2">1 AZN</span> bonus qazanacaqsınız.
                        </p>
                    }
                </div>
            </div>
        </div>
    </section>
</div>