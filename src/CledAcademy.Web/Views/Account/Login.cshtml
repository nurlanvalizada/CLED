@using CledAcademy.Core.Domain
@model CledAcademy.Web.Models.ViewModels.AccountViewModels.LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Hesaba Giriş";
}
  <!-- Start main-content -->
<div class="main-content">

    <!-- Section: inner-header -->
    <section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/images/bg3.jpg">
        <div class="container pt-70 pb-20">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="title text-white">Hesaba Giriş</h2>
                        <ol class="breadcrumb text-left text-black mt-10">
                            <li><a href="http://www.cledacademy.com">CledAcademy.Com</a></li>
                            <li><a asp-controller="Account" asp-action="Index">Hesab</a></li>
                            <li class="active text-gray-silver">Hesaba Giriş</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-push-3">
                    <div class="icon-box mb-0 p-0">
                        <a href="#" class="icon icon-bordered icon-rounded icon-sm pull-left mb-0 mr-10">
                            <i class="fa fa-user"></i>
                        </a>
                        <h4 class="text-gray pt-10 mt-0 mb-30">Artıq hesabınız var ? Daxil olun.</h4>
                    </div>
                    <hr>
                    <p>Hesabınıza Facebook ilə və ya istifadəçi adınızı və şifrənizi yazmaqla daxil olun.</p>
                    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                        <div class="clear text-center pt-10">
                            <div class="row">
                                <div class="col-sm-12">
                                    <button type="submit" id="fbLogin" name="provider" value="Facebook" class="btn btn-dark btn-lg btn-block no-border mt-15 mb-15" data-bg-color="#3b5998" title="Facebook ilə Daxil Ol"> <i class="fa fa-facebook-square"></i> Facebook ilə Daxil Ol</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" name="login-form" class="clearfix">
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label asp-for="Username">İstifadəçi Adı və ya Email</label> <span class="required-star">*</span>
                                <input asp-for="Username" class="form-control">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label asp-for="Password"></label> <span class="required-star">*</span>
                                <input asp-for="Password" class="form-control" placeholder="********">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="checkbox pull-left mt-15">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" type="checkbox">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                        <div class="form-group pull-right mt-10">
                            <button type="submit" class="btn btn-dark btn-sm">Daxil Ol</button>
                        </div>
                        <div class="clear text-center pt-10">
                            <a class="text-theme-colored font-weight-600 font-12" asp-controller="Account" asp-action="ForgotPassword">Şifrənizi Unutmusunuz ?</a>
                        </div>
                    </form>
                    <div class="clear text-center pt-10">
                        <div class="row">
                            <div class="col-sm-12">
                                <a asp-controller="Account" asp-action="Login" class="btn btn-default btn-lg btn-block mt-15">Hesabın yoxdur ? Qeydiyyatdan Keç</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- end main-content -->

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
