@model CledAcademy.Web.Models.ViewModels.ManageViewModels.ChangePasswordViewModel

<form asp-controller="Manage" asp-action="ChangePassword" method="post">
    <div class="icon-box mb-0 p-0">
        <a class="icon icon-bordered icon-rounded icon-sm pull-left mb-0 mr-10">
            <i class="fa fa-key"></i>
        </a>
        <h4 class="text-gray pt-10 mt-0 mb-30">Cari Şifrəni Dəyiş</h4>
    </div>
    <hr>
    <p class="text-gray"></p>
    
    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="OldPassword"></label> <span class="required-star">*</span>
            <input asp-for="OldPassword" class="form-control" placeholder="********">
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="NewPassword"></label> <span class="required-star">*</span>
            <input asp-for="NewPassword" class="form-control" placeholder="********">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="ConfirmPassword"></label> <span class="required-star">*</span>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="********">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-dark btn-lg mt-15" type="submit">Şifrəni Yenilə</button>
    </div>
</form>
