@model CledAcademy.Web.Models.ViewModels.PayViewModel
@{
    ViewBag.Title = "Ödəniş";
}

 <!-- Start main-content -->
<div class="main-content">
    <!-- Section: inner-header -->
    <section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/images/bg3.jpg">
        <div class="container pt-70 pb-20">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="title text-white">Ödəniş</h2>
                        <ol class="breadcrumb text-left text-black mt-10">
                            <li><a href="http://www.cledacademy.com">CledAcademy.Com</a></li>
                            <li><a asp-controller="Account" asp-action="Index">Mənim Hesabım</a></li>
                            <li class="active text-gray-silver">Ödəniş</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-push-3">
                    <div class="icon-box mb-0 p-0">
                        <a href="#" class="icon icon-bordered icon-rounded icon-sm pull-left mb-0 mr-10">
                            <i class="fa fa-cc-visa"></i>
                        </a>
                        <a href="#" class="icon icon-bordered icon-rounded icon-sm pull-left mb-0 mr-10">
                           <i class="fa fa-cc-mastercard"></i>
                        </a>
                        <h4 class="text-gray pt-10 mt-0 mb-30">Balansınızı artırın.</h4>
                    </div>
                    <hr>
                    <p>Kartınızın növünü və məbləği daxil edərək balansınızı artırın.</p>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-controller="Account" asp-action="Pay" method="post" name="login-form" class="clearfix">
                        <div class="row">
                            <label class="col-md-12">Kartın növü <span class="required-star">*</span></label>
                            <div class="form-group col-md-12">
                                <select asp-for="CardType" class="form-control">
                                    <option>Seç</option>
                                    <option value="v">Visa / Visa Electron</option>
                                    <option value="m">MasterCard / Maestro</option>
                                </select>
                                <span asp-validation-for="CardType" class="text-danger"></span>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label asp-for="Amount">Məbləğ</label> <span class="required-star">*</span>
                                <input asp-for="Amount" class="form-control" placeholder="00,00">
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group pull-right mt-10">
                            <button type="submit" class="btn btn-dark btn-sm">Ödəniş Et</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- end main-content -->

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}